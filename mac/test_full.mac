# TEST FILE
# Has a sizable but not overwhelming number of events to check for low probability errors.
# 
# Change the default number of workers (in multi-threading mode) 
/run/numberOfThreads 1
#
# Initialize kernel
#/cuts/setLowEdge 1 eV
#/run/setCut 1 nm
/run/initialize
#
/control/verbose 0
/run/verbose 1
/event/verbose 0
/tracking/verbose 0
/analysis/verbose 0
/run/printProgress 250
#
/analysis/setFileName /data/ncorso/Neutron_output/output/output_test/Neutron.root

/ChicagoGeom/setDeadLayer True
/ChicagoGeom/deleteGeometry

/gps/pos/type Point
#/gps/pos/centre 0 0 -110 mm
/gps/pos/centre 0 -6.614 -19.98 mm

/gps/particle neutron
/gps/energy 5 keV

#/gps/ang/type iso
/gps/ang/type focused
/gps/ang/focuspoint 0 0 -19.98 mm
#/gps/ang/mintheta 0 deg
#/gps/ang/maxtheta 85 deg

/run/beamOn 25000
